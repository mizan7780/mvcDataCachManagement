@model IEnumerable<MvcDataCachManagement.Models.PlayerTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html manifest="site.manifest">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <img src="~/Images/Banner.JPG" style="width:100%; height:100px;" />
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.playerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.playerCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.matchPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalRun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalWicket)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.playerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.playerCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.matchPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalRun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalWicket)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
